# Database
DATABASE_URL=sqlite:///./ocean_hazard.db

# Google Gemini Vision API
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# Mapbox
MAPBOX_ACCESS_TOKEN=YOUR_MAPBOX_ACCESS_TOKEN_HERE

# Twilio SMS
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID_HERE
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN_HERE
TWILIO_PHONE_NUMBER=YOUR_TWILIO_PHONE_NUMBER_HERE
ADMIN_PHONE_NUMBER=YOUR_ADMIN_PHONE_NUMBER_HERE

# Groq API (Multilingual)
GROQ_API_KEY=YOUR_GROQ_API_KEY_HERE

# INCOIS API
INCOIS_API_URL=https://incois.gov.in/api
INCOIS_API_KEY=your_incois_api_key_here

# Application Settings
APP_NAME=Ocean Hazard Live Reporting System
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=generate-a-secure-secret-key-for-production

# CORS Settings
ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Upload Settings
MAX_IMAGE_SIZE_MB=10
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# n8n Settings
N8N_WEBHOOK_URL=http://n8n:5678/webhook
